# Vetra Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3000
API_URL=https://your-app.up.railway.app

# Database (PostgreSQL) - Railway will auto-populate these
DATABASE_URL=postgresql://user:password@host:5432/database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vetra
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=true

# Redis - Railway will auto-populate this
REDIS_URL=redis://default:password@host:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=30d

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-app.up.railway.app/api/auth/google/callback

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta
SOLANA_PROGRAM_ID=your_program_id_here

# CORS Settings
CORS_ORIGIN=https://your-extension-id.chromium.org,http://localhost:5173
ALLOWED_ORIGINS=https://your-extension-id.chromium.org,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=
ENABLE_SENTRY=false

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Session Configuration
SESSION_SECRET=your-session-secret-change-this

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@vetra.com

# Multi-Agent System (if implemented)
MULTI_AGENT_API_URL=http://localhost:8000
MULTI_AGENT_API_KEY=your-multi-agent-api-key

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_ATTESTATIONS=true
ENABLE_REPUTATION_SYSTEM=true
ENABLE_SWAGGER_DOCS=true

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=1800000

# API Keys (if needed)
COINGECKO_API_KEY=
SOLSCAN_API_KEY=
